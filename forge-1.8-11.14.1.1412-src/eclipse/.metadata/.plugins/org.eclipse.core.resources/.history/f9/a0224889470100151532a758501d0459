package purebe.battlemage.blocks.clientrender;

import net.minecraft.block.Block;
import net.minecraft.client.Minecraft;
import net.minecraft.client.resources.model.ModelResourceLocation;
import net.minecraft.item.Item;

import com.woahtermod.blocks.WoahterBlocks;
import com.woahtermod.main.Main;

public final class BlockRenderRegister {
	public static void registerBlockRenderer() {
		registerBlock(WoahterBlocks.woahterBlock);
		registerBlock(WoahterBlocks.lightningRod);
		registerBlock(WoahterBlocks.eventedPressurePlate);
	}
	
	public static void registerBlock(Block block) {
		Minecraft.getMinecraft().getRenderItem().getItemModelMesher().register(
				Item.getItemFromBlock(block), 
				0, 
				new ModelResourceLocation(Main.MODID + ":" + block.getUnlocalizedName().substring(5),
				"inventory"));
	}
}