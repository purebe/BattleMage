package purebe.battlemage.items.clientrender;

import net.minecraft.client.Minecraft;
import net.minecraft.client.resources.model.ModelResourceLocation;
import net.minecraft.item.Item;

import com.woahtermod.items.WoahterItems;
import com.woahtermod.main.Main;

public final class ItemRenderRegister {
	public static void registerItemRenderer() {
		registerItem(WoahterItems.woahterItem);
		registerItem(WoahterItems.eraserTool);
	}
	
	public static void registerItem(Item item) {
		Minecraft.getMinecraft().getRenderItem().getItemModelMesher()
				.register(item, 0, new ModelResourceLocation(Main.MODID + ":" + item.getUnlocalizedName().substring(5), "inventory"));
	}
}