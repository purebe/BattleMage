package purebe.battlemage.eventhandlers;

import net.minecraft.client.Minecraft;
import net.minecraft.client.renderer.Tessellator;
import net.minecraft.client.renderer.WorldRenderer;
import net.minecraft.util.ResourceLocation;
import net.minecraftforge.client.event.RenderGameOverlayEvent;
import net.minecraftforge.fml.common.eventhandler.SubscribeEvent;

import org.lwjgl.opengl.GL11;

public class GuiEvents {
	@SubscribeEvent
	public void RenderGameOverlayEvent(RenderGameOverlayEvent event) {
		double posX = event.resolution.getScaledWidth() / 2;
		double posY = event.resolution.getScaledHeight() / 2;
		double height = 32 / event.resolution.getScaleFactor();
		double width = 32 / event.resolution.getScaleFactor();
		double zLevel = 100;
		double textureX = 0;
		double textureY = 0;
		
		Minecraft.getMinecraft().renderEngine.bindTexture(new ResourceLocation("battlemage:textures/gui/white_symbol.png"));

		GL11.glPushMatrix();
		
		Tessellator tessellator = Tessellator.getInstance();
        WorldRenderer worldrenderer = tessellator.getWorldRenderer();
         
        GL11.glEnable(GL11.GL_BLEND);
        GL11.glDisable(GL11.GL_DEPTH);
        GL11.glEnable(GL11.GL_ALPHA_TEST);
        GL11.glBlendFunc(GL11.GL_SRC_ALPHA, GL11.GL_ONE_MINUS_SRC_ALPHA);
        worldrenderer.setColorRGBA_F(1.0f, 1.0f, 1.0f, 0.2f);
        worldrenderer.startDrawingQuads();
        worldrenderer.addVertexWithUV(posX, posY + height, zLevel, 0, 1);
        worldrenderer.addVertexWithUV(posX + width, posY + height, zLevel, 1, 1);
        worldrenderer.addVertexWithUV(posX + width, posY, zLevel, 1, 0);
        worldrenderer.addVertexWithUV(posX, posY, zLevel, 0, 0);
        tessellator.draw();
        
        GL11.glPopMatrix();
	}
}
