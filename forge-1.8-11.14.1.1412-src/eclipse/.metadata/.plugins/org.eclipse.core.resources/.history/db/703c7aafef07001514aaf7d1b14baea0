package purebe.battlemage.magic;

import java.util.Arrays;
import java.util.List;

import net.minecraft.client.Minecraft;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.util.EnumParticleTypes;
import net.minecraft.util.ResourceLocation;
import net.minecraft.util.Vec3;
import purebe.battlemage.magic.SpellCaster.SpellName;
import purebe.battlemage.magic.SpellCaster.SpellSymbol;

public class GustSpell extends Spell {
	final EntityPlayer     player;
	final Vec3             playerLookat;
	
	public GustSpell(ResourceLocation icon) {
		player = null;
		playerLookat = null;
		this.icon = icon;
	}

	public GustSpell(EntityPlayer player, Vec3 playerLookat) {
		this.player = player;
		this.playerLookat = playerLookat;
		this.intensity = 1;
	}
	
	@Override
	public void cast() {
		for (int i = 0; i < 500; ++i) {
			/*player.worldObj.spawnParticle(EnumParticleTypes.HEART,
			                              player.getPosition().getX() + (5 * playerLookat.xCoord),
			                              player.getPosition().getY() + (0 * playerLookat.yCoord),
			                              player.getPosition().getZ() + (5 * playerLookat.zCoord),
			                              1.5f,
			                              1.5f,
			                              1.5f,
			                              new int[0]);*/
			double motionX = player.getRNG().nextGaussian() * 0.02D;
		    double motionY = player.getRNG().nextGaussian() * 0.02D;
		    double motionZ = player.getRNG().nextGaussian() * 0.02D;
		    player.worldObj.spawnParticle(
		          EnumParticleTypes.HEART, 
		          player.posX + playerLookat.xCoord * i + player.getRNG().nextFloat() * player.width * 2.0F - player.width, 
		          player.posY + 0.5D + player.getRNG().nextFloat() * player.height, 
		          player.posZ + playerLookat.zCoord * i + player.getRNG().nextFloat() * player.width * 2.0F - player.width, 
		          motionX, 
		          motionY, 
		          motionZ,
		          new int[0]);
		}
	}
	
	@Override
	public List<SpellSymbol> getIncantation() {
		return Arrays.asList(SpellSymbol.Black, SpellSymbol.Power, SpellSymbol.Black, SpellSymbol.Chaos, SpellSymbol.Black);
	}

	@Override
	public SpellName getName() {
		return SpellName.Gust;
	}
}
